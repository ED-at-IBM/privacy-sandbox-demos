{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "preserve",
  "bracketSpacing": false,
  "trailingComma": "all",
  "arrowParens": "always",
  "embeddedLanguageFormatting": "off",
  "proseWrap": "always",
  "overrides": [
    {
      "files": [
        "**/*.js",
        "**/*.ts",
        "**/*.css"
      ]
    },
    {
      "files": [
        "**/*.yaml",
        "**/*.yml"
      ],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": [
        "**/*.json",
        "**/tailwind.config.js"
      ],
      "options": {
        "printWidth": 40
      }
    },
    {
      "files": ["**/*.md"],
      "options": {
        "printWidth": 150
      }
    }
  ]
}
